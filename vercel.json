{
  "version": 2,
  "regions": ["hkg1"],
  "builds": [
    {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  
        }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=600"
      }
    }
  ]
}